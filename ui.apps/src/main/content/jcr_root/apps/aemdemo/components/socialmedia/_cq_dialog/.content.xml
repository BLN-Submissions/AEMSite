<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:granite="http://www.adobe.com/granite/ui/common"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          jcr:primaryType="cq:Dialog"
          title="Social Media Embed Component"
          xtype="panel">

    <!-- Dialog Tabs -->
    <content jcr:primaryType="cq:TabPanel">

        <!-- General Tab: Fields for YouTube, Facebook, and Twitter URLs -->
        <items jcr:primaryType="cq:Panel" title="Social Media URLs">
            <items jcr:primaryType="cq:Form">
                <!-- YouTube URL -->
                <youtubeUrl jcr:primaryType="cq:Widget" fieldLabel="YouTube URL" xtype="textfield"/>
                
                <!-- Facebook URL -->
                <facebookUrl jcr:primaryType="cq:Widget" fieldLabel="Facebook URL" xtype="textfield"/>
                
                <!-- Twitter URL -->
                <twitterUrl jcr:primaryType="cq:Widget" fieldLabel="Twitter URL" xtype="textfield"/>
            </items>
        </items>

        <!-- Additional Tab: Fields for Title and Description -->
        <items jcr:primaryType="cq:Panel" title="Additional Information">
            <items jcr:primaryType="cq:Form">
                <!-- Title -->
                <title jcr:primaryType="cq:Widget" fieldLabel="Title" xtype="textfield"/>
                
                <!-- Description -->
                <description jcr:primaryType="cq:Widget" fieldLabel="Description" xtype="textfield"/>
            </items>
        </items>
        
    </content>
</jcr:root>
